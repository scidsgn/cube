generator client {
    provider = "prisma-client"
    output   = "../apis/prisma"
}

datasource db {
    provider = "postgresql"
}

enum UserRole {
    ADMIN
    MEMBER
}

model User {
    id            Int            @id @default(autoincrement())
    userName      String
    displayName   String
    passwordHash  String?
    otpSecret     String?
    otpEnabled    Boolean        @default(false)
    role          UserRole
    refreshTokens RefreshToken[]
    externalId    String         @db.Uuid
}

model RefreshToken {
    id         Int      @id @default(autoincrement())
    userId     Int
    user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    expires    DateTime
    externalId String   @db.Uuid
}
